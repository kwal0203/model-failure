---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('audits');
  return entries.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const s = entry.data.severity_summary;
---

<BaseLayout title={`${entry.data.title} | Audits`} description={entry.data.scope}>
  <article class="prose">
    <h1>{entry.data.title}</h1>
    <p class="meta">{entry.data.date} â€¢ {entry.data.target_name}</p>
    <div class="tag-row">
      {entry.data.topics.map((topic) => <span class="tag">{topic}</span>)}
    </div>
    <p>
      Target: <a href={entry.data.target_link}>{entry.data.target_name}</a> ({
        entry.data.target_version
      })
    </p>
    <p>Scope: {entry.data.scope}</p>
    <p>
      Severity: C {s.critical} / H {s.high} / M {s.medium} / L {s.low}
    </p>
    {
      entry.data.links && (
        <p>
          Links:
          {entry.data.links.repo && (
            <>
              {' '}
              <a href={entry.data.links.repo}>Repository</a>
            </>
          )}
          {entry.data.links.report_pdf && (
            <>
              {' '}
              <a href={entry.data.links.report_pdf}>Report PDF</a>
            </>
          )}
        </p>
      )
    }
    <Content />
  </article>
</BaseLayout>
